# High-Probability Bond Strategy Configuration
# Buy near-certain outcomes (>95%) close to resolution for low-risk 1-5% returns
# Expected: 1800% annualized when compounded

# ==================== PROVIDER & STRATEGY ====================
PROVIDER=polymarket
STRATEGY=high_probability_bond

# ==================== POLYMARKET CREDENTIALS ====================
POLYMARKET_PRIVATE_KEY=your_private_key_here
POLYMARKET_SIGNATURE_TYPE=1
POLYMARKET_FUNDER=your_funder_address_here_for_magic_link_users

# API credentials (generate with: python -m src.generate_api_key)
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_API_SECRET=your_api_secret_here
POLYMARKET_API_PASSPHRASE=your_api_passphrase_here

# ==================== STRATEGY PARAMETERS ====================
# Probability range
MIN_PROBABILITY=0.95              # Minimum 95% probability to enter
MAX_PROBABILITY=0.99              # Maximum 99% (don't overpay)

# Time to resolution
MAX_HOURS_TO_RESOLUTION=48        # Only markets resolving within 48 hours

# Return requirements
MIN_EXPECTED_RETURN=1.0           # Minimum 1% return per trade

# Market selection
MARKET_CATEGORIES=crypto,politics,sports  # Categories to scan

# Order parameters
ORDER_SIZE=100                    # 100 shares per trade
ORDER_TYPE=FOK                    # Fill-or-Kill for safety
SCAN_INTERVAL=60                  # Scan every 60 seconds

# ==================== RISK MANAGEMENT ====================
# Daily limits
MAX_DAILY_LOSS=50.0               # Stop after $50 daily loss
MAX_TRADES_PER_DAY=20             # Max 20 trades per day
MIN_BALANCE_REQUIRED=50.0         # Minimum $50 balance to continue

# Position sizing
MAX_POSITION_SIZE=500.0           # Max $500 per trade
MAX_BALANCE_UTILIZATION=0.8       # Use max 80% of balance

# ==================== GENERAL SETTINGS ====================
DRY_RUN=true                      # Start with simulation mode
SIM_BALANCE=1000                  # Simulated starting balance
ENABLE_STATS=true                 # Enable statistics tracking
TRADE_LOG_FILE=trades_high_prob_bond.json
USE_RICH_OUTPUT=true
VERBOSE=false

# ==================== TRADING PROFILE ====================
# Auto-adjust parameters based on balance
TRADING_PROFILE=auto              # auto, learning, testing, scaling, advanced, professional
